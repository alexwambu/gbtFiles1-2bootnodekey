# GBTNetwork Bootnode Dockerfile
FROM ethereum/client-go:stable

# Set working directory
WORKDIR /bootnode

# Copy bootnode key (must exist in repo or generated at build)
COPY bootnode.key .

# Expose discovery port
EXPOSE 30301/tcp
EXPOSE 30301/udp

# Start bootnode
ENTRYPOINT ["bootnode"]
CMD ["-nodekey", "bootnode.key", "-addr", ":30301"]
